{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2019",
    "module": "commonjs",
    "types": ["node"],
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./index.js",
    "./.eslintrc.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
